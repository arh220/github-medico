<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>All Orders - Admin Panel</title>
        <style>
            .order-card {
                border: 1px solid #ddd;
                border-radius: 10px;
                padding: 20px;
                margin-bottom: 30px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
            }

            .order-header {
                background-color: #f8f9fa;
                padding: 10px 15px;
                border-radius: 8px;
                margin-bottom: 20px;
            }
        </style>
</head>

<body>
    <%- include("./partials/sidebar") %>

        <div class="container mt-5">
            <h2 class="mb-4 text-center">All Customer Orders</h2>

            <% allOrders.forEach((order, index)=> { %>
                <div class="order-card">
                    <div class="order-header d-flex justify-content-between">
                        <strong>Order #<%= index + 1 %></strong>
                        <span><strong>Date:</strong>
                            <%= order.createdAt.toLocaleDateString() %>
                        </span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Customer Info</h5>
                            <p><strong>Name:</strong>
                                <%= order.name %>
                            </p>
                            <p><strong>Email:</strong>
                                <%= order.email %>
                            </p>
                            <p><strong>Mobile:</strong>
                                <%= order.mo %>
                            </p>
                            <p><strong>Address:</strong>
                                <%= order.addre %>, <%= order.city %> - <%= order.pincode %>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5>Order Summary</h5>
                            <p><strong>Subtotal:</strong> ₹<%= order.subtotal.toFixed(2) %>
                            </p>
                            <p><strong>Shipping:</strong> ₹<%= order.shipping.toFixed(2) %>
                            </p>
                            <p><strong>Total:</strong> ₹<%= order.grandTotal.toFixed(2) %>
                            </p>
                        </div>
                    </div>

                    <h5>Ordered Products</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered text-center">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Product Name</th>
                                    <th>Qty</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% order.cartItems.forEach((item, i)=> { %>
                                    <tr>
                                        <td>
                                            <%= i + 1 %>
                                        </td>
                                        <td>
                                            <%= item.name %>
                                        </td>
                                        <td>
                                            <%= item.quantity %>
                                        </td>
                                        <td>₹<%= item.price.toFixed(2) %>
                                        </td>
                                        <td>₹<%= item.total.toFixed(2) %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <% }) %>

        </div>

        <%- include('./partials/script') %>
</body>

</html>