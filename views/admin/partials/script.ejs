<script>
    function onBrandChange(brandId) {
        if (brandId) {
            // Reload the page with ?brand=brandId to fetch categories from backend
            window.location.href = `/admin/product?brand=${brandId}`;
        } else {
            // No brand selected, reload without query
            window.location.href = "/admin/product";
        }
