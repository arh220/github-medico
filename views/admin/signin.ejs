<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>Sign in</title>
        <link rel="stylesheet" href="/css/adminstyle.css">
</head>

<body>

    <div class="container d-flex justify-content-center align-items-center form-wrapper" style="min-height: 100vh;">
        <div class="bg-white shadow rounded p-4" style="width: 600px;">
            <% if (error) { %>
                <div class="alert alert-danger text-center">
                    <%= error %>
                </div>
                <% } %>
                    <div class="text-center mb-3">
                        <h2>Sign in</h2>
                    </div>

                    <!-- Centered Form Start -->
                    <form action="/admin/signin" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary px-4">Sign in</button>
                        </div>
                    </form>
        </div>
    </div>
    <%- include("./partials/script") %>
</body>

</html>